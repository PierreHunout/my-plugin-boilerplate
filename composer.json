{
    "name": "pierrehunoutplugins/mypluginboilerplate",
    "description": "Basic Plugin with PSR-4 autoload.",
    "license": "GPL-3.0",
    "type": "wordpress-plugin",
    "authors": [
        {
            "name": "Pierre Hunout",
            "email": "pierre.hunout@gmail.com"
        }
    ],
    "config": {
        "vendor-dir": "vendor",
        "allow-plugins": {
            "composer/installers": true,
            "phpstan/extension-installer": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "autoload": {
        "psr-4": {
            "MyPluginBoilerplate\\": "includes/"
        }
    },
    "require": {
        "composer/installers": "^2.1"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.6.2",
        "roave/security-advisories": "dev-latest",
        "sirbrillig/phpcs-variable-analysis": "^2.12.0",
        "wp-coding-standards/wpcs": "^3.1.0",
        "phpunit/phpunit": "^9.6",
        "yoast/phpunit-polyfills": "^2.0"
    },
    "scripts": {
        "phpcs": [
            "phpcs"
        ],
        "phpcs:fix": [
            "phpcbf"
        ],
        "phpcs:report": [
            "phpcs --report=summary"
        ],
        "phpunit": [
            "phpunit"
        ],
        "phpunit:unit": [
            "phpunit --testsuite=\"Unit Tests\""
        ],
        "phpunit:integration": [
            "phpunit --testsuite=\"Integration Tests\""
        ],
        "phpunit:coverage": [
            "phpunit --coverage-html tests/coverage-html"
        ],
        "test": [
            "@phpcs",
            "@phpunit"
        ],
        "test:quick": [
            "@phpcs",
            "@phpunit:unit"
        ]
    }
}
