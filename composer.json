{
	"name": "wordofpoetry/mypluginboilerplate",
	"description": "Basic Plugin with PSR-4 autoload.",
	"type": "wordpress-plugin",
	"license": "GPL-3.0-or-later",
	"version": "1.0.0",
	"authors": [
		{
			"name": "Pierre Hunout",
			"email": "pierre.hunout@gmail.com"
		}
	],
	"config": {
		"vendor-dir": "vendor",
		"allow-plugins": {
			"composer/installers": true,
			"phpstan/extension-installer": true,
			"dealerdirect/phpcodesniffer-composer-installer": true,
			"roots/wordpress-core-installer": true
		}
	},
	"require": {
		"php": ">=7.4",
		"composer/installers": "^2.1"
	},
	"require-dev": {
		"squizlabs/php_codesniffer": "^3.6.2",
		"roave/security-advisories": "dev-latest",
		"sirbrillig/phpcs-variable-analysis": "^2.12.0",
		"wp-coding-standards/wpcs": "^3.1.0",
		"phpunit/phpunit": "^9.5",
		"yoast/phpunit-polyfills": "^2.0",
		"mockery/mockery": "^1.6",
		"brain/monkey": "^2.6"
	},
	"scripts": {
		"phpcs": [
			"phpcs"
		],
		"phpcs:fix": [
			"phpcbf"
		],
		"phpcs:report": [
			"phpcs --report=summary"
		],
		"phpunit": [
			"phpunit"
		],
		"phpunit:unit": [
			"phpunit --testsuite=\"Unit Tests\""
		],
		"phpunit:integration": [
			"phpunit --testsuite=\"Integration Tests\""
		],
		"phpunit:coverage": [
			"phpunit --coverage-html tests/coverage-html"
		],
		"test": [
			"@phpcs",
			"@phpunit"
		],
		"test:quick": [
			"@phpcs",
			"@phpunit:unit"
		]
	},
	"extra": {
		"installer-name": "my-plugin-boilerplate",
		"installer-paths": {
			"wp-content/plugins/{$name}/": [
				"type:wordpress-plugin"
			]
		}
	},
	"autoload": {
		"psr-4": {
			"MyPluginBoilerplate\\": "includes/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"MyPluginBoilerplate\\Tests\\": "tests/"
		}
	}
}
