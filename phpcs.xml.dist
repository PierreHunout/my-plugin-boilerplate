<?xml version="1.0"?>
<ruleset name="My Plugin Boilerplate">
    <description>PHPCS ruleset for My Plugin Boilerplate</description>

    <!-- Include WordPress Coding Standards -->
    <rule ref="WordPress"/>
    <rule ref="WordPress-Extra"/>
    <rule ref="WordPress-Docs"/>

    <!-- Include additional rulesets -->
    <rule ref="VariableAnalysis"/>

    <!-- Set the minimum PHP version -->
    <config name="minimum_supported_wp_version" value="5.0"/>
    <config name="testVersion" value="7.4-"/>

    <!-- Files and directories to check -->
    <file>./my-plugin-boilerplate.php</file>
    <file>./includes</file>

    <!-- Exclude patterns -->
    <exclude-pattern>*/node_modules/*</exclude-pattern>
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/build/*</exclude-pattern>
    <exclude-pattern>*/src/*</exclude-pattern>
    <exclude-pattern>*/languages/*</exclude-pattern>
    <exclude-pattern>*/assets/*</exclude-pattern>

    <!-- Arguments -->
    <arg value="sp"/>
    <arg name="basepath" value="./"/>
    <arg name="colors"/>
    <arg name="extensions" value="php"/>
    <arg name="parallel" value="8"/>

    <!-- Rules configuration -->
    <rule ref="WordPress.Files.FileName">
        <properties>
            <property name="strict_class_file_names" value="false"/>
        </properties>
    </rule>

    <!-- Allow short prefixes for hook names -->
    <rule ref="WordPress.NamingConventions.PrefixAllGlobals">
        <properties>
            <property name="prefixes" type="array">
                <element value="my_plugin_boilerplate"/>
                <element value="MY_PLUGIN_BOILERPLATE"/>
                <element value="MyPluginBoilerplate"/>
            </property>
        </properties>
    </rule>

    <!-- Customizations -->
    
    <!-- Allow short array syntax -->
    <rule ref="Generic.Arrays.DisallowShortArraySyntax.Found">
        <severity>0</severity>
    </rule>

    <!-- Allow long array syntax too (mixed is OK) -->
    <rule ref="Generic.Arrays.DisallowLongArraySyntax.Found">
        <severity>0</severity>
    </rule>

    <!-- Increase line length limit -->
    <rule ref="Generic.Files.LineLength">
        <properties>
            <property name="lineLimit" value="120"/>
            <property name="absoluteLineLimit" value="150"/>
        </properties>
    </rule>

    <!-- Allow multiple assignments on same line -->
    <rule ref="Squiz.PHP.DisallowMultipleAssignments.Found">
        <severity>0</severity>
    </rule>

    <!-- Allow concatenation without spaces (personal preference) -->
    <rule ref="Squiz.Strings.ConcatenationSpacing">
        <properties>
            <property name="spacing" value="1"/>
            <property name="ignoreNewlines" value="true"/>
        </properties>
    </rule>

    <!-- Ignore missing translator comments for now -->
    <rule ref="WordPress.WP.I18n.MissingTranslatorsComment">
        <severity>0</severity>
    </rule>

    <!-- Allow yoda conditions to be optional -->
    <rule ref="WordPress.PHP.YodaConditions.NotYoda">
        <severity>0</severity>
    </rule>

</ruleset>